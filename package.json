{
  "name": "cookie",
  "version": "1.0.0",
  "description": "Graphics template for The Michigan Daily",
  "type": "module",
  "author": "Naitian Zhou",
  "license": "MIT",
  "scripts": {
    "watch:src": "nodemon --watch src/ -e '*' --watch config.json scripts/render.js",
    "watch:template": "parcel build/index.html build/graphic/index.html",
    "build:src": "node scripts/render.js",
    "build:parcel:wrapper": "parcel build --no-cache --public-url './' build/index.html --dist-dir dist/",
    "build:parcel:graphic": "parcel build --no-cache --public-url './' build/graphic/index.html --dist-dir dist/graphic/",
    "build:template": "run-s build:parcel:wrapper build:parcel:graphic",
    "build": "rm -rf build/* && rm -rf dist/* && run-s build:src build:template",
    "build:prod": "NODE_ENV=production yarn build",
    "dev": "run-p watch:*"
  },
  "dependencies": {
    "d3": "^7.3.0",
    "pym.js": "^1.3.2"
  },
  "devDependencies": {
    "parcel": "^2.2.0",
    "@parcel/transformer-sass": "^2.2.0",
    "sass": "^1.48.0",
    "nunjucks": "^3.2.2",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "fs-extra": "^10.0.0",
    "glob": "^7.1.6",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "sink": "https://github.com/MichiganDaily/sink"
  },
  "browserslist": [
    "since 2017-06"
  ]
}